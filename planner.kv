MDScreen:
    name: "planner"
    MDFloatLayout:
        md_bg_color: kivy.utils.get_color_from_hex("#FDA300")
        MDFloatLayout:
            md_bg_color: kivy.utils.get_color_from_hex("#1F4762")
            size_hint: 1, .07
            pos_hint: {"center_x": .5, "center_y": .97}
        MDIconButton:
            icon: "icons/white/chevron-left.png"
            user_font_size: ".1dp"
            pos_hint: {"center_x": .05, "center_y": .97}
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "right"
        MDLabel:
            text: "Travel Planner"
            pos_hint: {"center_x": .6, "center_y": .97}
            halign: "left"
            font_size: "20dp"
            font_name: "fonts/Nunito-Bold.ttf"
            color: kivy.utils.get_color_from_hex("#FEDFA6")
        MDLabel:
            text: "Trip Overview"
            pos_hint: {"center_x": .55, "center_y": .88}
            halign: "left"
            font_size: "25dp"
            font_name: "fonts/Nunito-Bold.ttf"
            color: kivy.utils.get_color_from_hex("#1F4762")
        Button:
            text: "Select Date"
            background_color: 0, 0, 0, 0
            font_name: "fonts/Nunito-Regular.ttf"
            color: kivy.utils.get_color_from_hex("#FEDFA6")
            size_hint: .25, .05
            pos_hint: {"center_x": .83, "center_y": .88}
            canvas.before:
                Color:
                    rgba: kivy.utils.get_color_from_hex("#1F4762") if self.state == "normal" else kivy.utils.get_color_from_hex("#153040")
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [8]
            on_release:
                app.select_date()
        MDLabel:
            text: "Start Date  :"
            pos_hint: {"center_x": .20, "center_y": .80}
            halign: "center"
