            pos_hint: {"center_x": .6, "center_y": .30}
            halign: "left"
            font_size: "16dp"
            font_name: "fonts/Nunito-Regular.ttf"
            color: kivy.utils.get_color_from_hex("#000000")
        MDLabel:
            text: "Account Type:"
